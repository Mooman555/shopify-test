  {%- if page_title == "Your Shopping Cart" -%}
  <p>{{ block.settings.heading}}</p>
  <option>{{ cart.original_total_price| divided_by:100 }} Loyalty Points</option>
  {%- else -%}
   <p>{{ block.settings.heading}}</p>
   <option>{{ product.price| divided_by:100 }} Loyalty Points</option>
  {%- endif -%}


{% schema %}
  {
    "name": "Loyalty Point Block",
    "target": "section",
    "stylesheet": "image-gallery.css",
    "javascript": "image-gallery.js",
    "templates": ["product", "index"],
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Add Label",
        "default": "Loyalty Points"
      }
    ]
  }
{% endschema %}
